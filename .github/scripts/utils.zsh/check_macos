autoload -Uz is-at-least log_group log_info log_error log_status

log_info 'Checking for Homebrew...'
if (( ! ${+commands[brew]} )) {
  log_error 'No Homebrew command found. Please install Homebrew (https://brew.sh)'
  return 2
}

brew bundle --file ${SCRIPT_HOME}/.Brewfile
rehash

# Remove Homebrew's OpenSSL to prevent architecture conflicts with universal builds
# obs-deps provides a universal OpenSSL that will be used instead
if [[ -d ${HOMEBREW_PREFIX}/Cellar/openssl@3 ]] {
  log_info 'Removing Homebrew OpenSSL (universal build will use obs-deps OpenSSL)...'
  brew uninstall --ignore-dependencies openssl@3 || true
}

log_group
